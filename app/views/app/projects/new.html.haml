- if @resource
  - case @resource.class.name
  - when 'User', 'Business'
    - path_array = [@resource, @project]
    - url = resource_projects_path(@resource)
  - when 'Household'
    - path_array = [@resource, @project]
    - url = user_home_projects_path(@user)
  - when 'Group'
    - path_array = [@resource, @project]
    - url = group_projects_path(@resource)
- else
  - path_array = @project
  - url = projects_path

.grid-container.small-12.medium-10

  .grid-content.small-12
    %h3 New project
    = form_for path_array, :url => url do |f|
      %section.block-list
        %header Project
        %ul
          %li
            = f.text_field :name, {:placeholder => 'Name'}
          %li
            = f.text_area :description, {:placeholder => 'Description'}

      %button.button.expanded.bg-blueberry Save

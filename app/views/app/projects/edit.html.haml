- if @resource
  - case @resource.class.name
  - when 'User', 'Business'
    - path_array = [@resource, @project]
    - url = resource_project_path(@resource,@project)
  - when 'Household'
    - path_array = [@resource, @project]
    - url = user_home_project_path(@user,@project)
  - when 'Group'
    - path_array = [@resource, @project]
    - url = group_project_path(@resource,@project)

.grid-container.small-12.medium-10

  .grid-content.small-12
    %h3 Edit project
    = form_for path_array, :url => url do |f|
      %section.block-list
        %header Project
        %ul
          %li
            = f.text_field :name, {:placeholder => 'Name'}
          %li
            = f.text_area :description, {:placeholder => 'Description'}

      %button.button.expanded.bg-blueberry Save

      %a.button.small.hollow.strawberry-jam{:href => url, :rel => 'nofollow', 'data-confirm' => "Are you sure?", 'data-method' => 'delete'}
        %i.fa.fa-trash
        Delete

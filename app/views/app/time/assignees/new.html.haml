- case @resource.class.name
- when 'Household'
  - path_array = [@resource, @timer, @membership]
  - url = user_home_timer_assignees_path(@user,@timer)
- when 'Business', 'User'
  - path_array = [@resource, @timer, @membership]
  - url = resource_timer_assignees_path(@resource,@timer)
- when 'Group'
  - path_array = [@resource, @timer, @membership]
  - url = group_timer_assignees_path(@group,@timer)

.grid-container.small-12.medium-10

  .grid-content.small-12
    %h3 New assignee
    = form_for path_array, url: url do |f|

      %section.block-list
        %header Choose from collaborators
        %ul
          %li.with-dropdown
            = f.grouped_collection_select :global_member, [@options_for_member_select], :all, :human_name, :to_global_id, :name, {:prompt => true}

      %button.button.expanded.bg-blueberry Save

- if @resource
  - case @resource.class.name
  - when 'User', 'Business'
    - path_array = [@resource, @event]
    - url = resource_event_path(@resource,@event)
  - when 'Household'
    - path_array = [@resource, @event]
    - url = user_home_event_path(@user,@event)
  - when 'Group'
    - path_array = [@resource, @event]
    - url = group_event_path(@resource,@event)
- else
  - path_array = @event
  - url = event_path(@event)

.grid-container.small-12.medium-10

  .grid-content.small-12
    %h3= @event.name + " - Edit"

    = form_for path_array, :url => url do |f|

      %section.block-list
        %header Event
        %ul
          %li
            = f.text_field :name, {:placeholder => 'Name'}
          %li
            = f.text_area :description, {:placeholder => 'Description'}

      %button.button.expanded.bg-blueberry Save

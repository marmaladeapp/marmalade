- if @context
  - if @context.class.name == 'Group'
    - edit_telephone = edit_group_contact_telephone_path(@context,@contact,telephone)
  - else
    - edit_telephone = @context.class.name == "Household" ? edit_user_home_contact_telephone_path(current_user,@contact,telephone) : edit_resource_contact_telephone_path(@resource,@contact,telephone)

%div.clearfix
  %div.float-left
    %p{:style => 'line-height:1.3;margin-bottom:10px;font-size:1.2em;'}
      = telephone.number.phony_formatted
  %div.float-left{:style => 'padding-left:10px;'}
    %p{:style => 'line-height:1.3;margin-bottom:10px;font-size:1.2em;'}
      %a.silver{:href => edit_telephone}
        %i.fa.fa-fw.fa-pencil
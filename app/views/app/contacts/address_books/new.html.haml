- if @resource
  - case @resource.class.name
  - when 'User', 'Business'
    - path_array = [@resource, @address_book]
    - url = resource_address_books_path(@resource)
  - when 'Household'
    - path_array = [@resource, @address_book]
    - url = user_home_address_books_path(@user)
- else
  - path_array = @address_book
  - url = address_books_path

.grid-container.small-12.medium-10

  .grid-content.small-12
    %h3 New address book
    = form_for path_array, :url => url do |f|
      %section.block-list
        %header Address book
        %ul
          %li
            = f.text_field :name, {:placeholder => 'Name'}
          %li
            = f.text_area :description, {:placeholder => 'Description'}

      %button.button.expanded.bg-blueberry Save

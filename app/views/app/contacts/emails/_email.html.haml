- if @context
  - if @context.class.name == 'Group'
    - edit_email = edit_group_contact_email_path(@context,@contact,email)
  - else
    - edit_email = @context.class.name == "Household" ? edit_user_home_contact_email_path(current_user,@contact,email) : edit_resource_contact_email_path(@resource,@contact,email)

%div.clearfix
  %div.float-left
    %p{:style => 'line-height:1.3;margin-bottom:10px;font-size:1.2em;'}
      = email.address
  %div.float-left{:style => 'padding-left:10px;'}
    %p{:style => 'line-height:1.3;margin-bottom:10px;font-size:1.2em;'}
      %a.silver{:href => edit_email}
        %i.fa.fa-fw.fa-pencil